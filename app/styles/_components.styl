// SVG icons
[class^="icon-"], [class*=" icon-"]
  height: 32px
  width: 32px
  display: inline-block
  fill: currentColor

@keyframes frantic-noise-movement
  0%, 100%
    transform: translate(0,0)
  50%
    transform: translate(10%,0)

.noise-layer
  background-image: url('../images/noise.png')
  position: absolute
  width: 300%
  height: 300%
  top: -100%
  left: -100%
  animation: frantic-noise-movement .4s infinite
  opacity: .2
  z-index: 0
  background-size: 300px
  display: none
  @media $break-point-2
    display: block

