
// $dev
dev-outline($color)
  border: 3px solid $color

$break-point-1 = '(min-width: 500px) and (min-height: 500px)'
$break-point-2 = '(min-width: 900px) and (min-height: 600px)'

html, body
  //
  @media $break-point-2
    height: 100%
    background: gray
    background-size: cover
    background-position: center center
    background-image: url('/images/stories/4/right.png')

body
  // background: $black
  transition: 0s

.container
  width: 100%
  padding: 0

.inner-w
  width: 100%
  max-width: 1100px
  margin: 0 auto
  clear-floats()
  padding: $pad*2

.wire-fframes
  background: $color-light
  //
  .container
    border: 2px solid $color
    padding: $pad
    margin-top: $pad
    .inner-w
      border: 1px solid $color
  &.landing
    section.container
      .inner-w
        min-height: 300px
        @media $break-point-1
          min-height: 400px
  .menu
    //
  .module
    width: 100%
    border: 1px solid $color
    .input-w
      .label
        color: $color
      input
        background: transparent
        border: 1px solid $color
  .ember-load-indicator
    .branding
      border: 1px solid $color
  .range-slider
    border: 1px solid $color
  .ember-load-indicator
    background: $color-light

a
  color: $highlight
  text-decoration: none

p
  max-width: 900px
  &:not(first-of-type)
    margin-top: $pad*2

responsive-img()
  display: block
  width: 100%
  height: auto
.img-w
  img
    responsive-img()

responsive-svg()
  display: block
  width: 100%
  height: 100%
  fill: currentColor
.svg-w
  svg
    responsive-svg()

.brand-mark
  display: inline-block
  max-width: 40px

.module
  // background: $white
  padding: $pad
  float: left
  &:not(first-of-type)
    margin-top: $pad*2
  form
    input
      background: $white

.menu
  li
    display: inline-block
    a
      padding: $pad 0

.ember-load-indicator
  fixed-stretch()
  z-index: 50
  .branding
    absolute-translate-center()
    padding: $pad*2
    max-width: 100px

// .brand-icon
//   display: none

// .record-indicator
//   display: none

.social-list
  li
    display: inline-block
    a
      color: $color
     
.stats
  display: flex
  
.next-button
  margin-bottom: $pad*6
  border: 1px solid $highlight
  padding: $pad*2 $pad*3
  min-width: 120px
  text-align: center
  span
    display: inline-block
    width: 100%;

.button
  border: 1px solid $highlight
  padding: $pad $pad*2
  margin-top: $pad
  display: inline-flex
  align-items: center
  // max-width: 200px
  flex-shrink: 1
  solid-type()
  uppercase()
  font-size: 16px
  letter-spacing: .06em
  .icon-x
    width: 16px
    height: 16px
    margin-right: $pad
  &:active, &:hover
    background: $highlight
    color: $white 

.page
  // border: 1px solid red
  padding: $pad*2
  text-align: center
  header
    .full-logo
      display: inline-block
      color: $color
      margin: $pad*4 0 $pad*4
    .brand-mark
      color: $color
  main
    text-align: left
    color: $white
    p
      solid-type()
  footer
    margin-top: $pad*6

  .button
    border-color: $color
    color: $color
    text-decoration: none
    &:active, &:hover
      background: $color
      color: $white





