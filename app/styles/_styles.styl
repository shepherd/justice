
// $dev
dev-outline($color)
  border: 3px solid $color

body
  // background: $black

.container
  width: 100%

.inner-w
  width: 100%
  max-width: 1100px
  margin: 0 auto
  clear-floats()
  padding: $pad

.wire-frames
  background: $color-light
  //
  .container
    border: 2px solid $color
    padding: $pad
    margin-top: $pad
    .inner-w
      border: 1px solid $color
  section.container
    .inner-w
      min-height: 300px
      @media $break-point-1
        min-height: 400px

  .menu
    //
  .module
    border: 1px solid $color
    .input-w
      .label
        color: $color
      input
        background: transparent
        border: 1px solid $color
  
a
  color: $highlight
  text-decoration: underline

p
  //
  &:not(first-of-type)
    margin-top: $pad*2
    
.module
  // background: $white
  padding: $pad
  border: 1px solid $color
  float: left
  &:not(first-of-type)
    margin-top: $pad*2
  form
    input
      background: $white

.menu
  li
    display: inline-block