
dev-outline($color)
  // border: 1px solid $color

body
  background: black
  color: $white
  font-family: monospace

visuallyHidden()
  position absolute !important
  clip rect(1px 1px 1px 1px)
  clip rect(1px, 1px, 1px, 1px)
  padding 0 !important
  border 0 !important
  height 1px !important
  width 1px !important
  overflow hidden

.visually-hidden
  visuallyHidden()

input, textarea, button, select, a
  -webkit-tap-highlight-color: rgba(0,0,0,0)

reset-button-styles()
  background: transparent
  border: 0
  border-radius: 0
  &:focus
    outline: 0

button
  reset-button-styles()

body.ember-application
  transition: .3s
  background: black

body
  transition: background 1s ease-in-out
  standard-type()

button()
  position: relative
  display: inline-block
  background: transparent
  font-family: inherit
  font-size: 16px
  padding: $pad*1.3 $pad $pad*1.15
  border-radius: 0
  border: 2px solid $white
  color: $white
  min-width: 160px
  text-align: center
  cursor: pointer
  text-decoration: none
  text-transform: uppercase
  min-width: 220px
  standard-type()
  font-weight: 700
  span
    float: none
    display: inline-block
    vertical-align: middle
  .special-char
    position: relative
    bottom: 2px
  &:active, &:focus, &:hover
    background: $highlight
    color: $white
    border: 2px solid $highlight
  &:before
    position: absolute
    content: ''
    display: block
    width: 100%
    height: 100%
    z-index: 30!important
    top: 0
    right: 0
    bottom: 0
    left: 0

.button
  button()

.center
  fixed-transform-center()
  // border: 4px double blue

