.temp
  opacity: .1

// =============
.outfield
  relative()
  fixed-stretch()
  background: #222
  // dev-outline(pink)

.justice-wrapper
  relative()
  absolute-stretch()
  // max-width: 1024px // basic landscape ipad
  // max-height: 660px // basic landscape ipad
  absolute-translate-center()
  background: black
  padding: $pad
  overflow: hidden
  // dev-outline(blue)

.below-lego-house
  // border: 2px solid blue
  width: 100%
  float: left


.brand-icon.stay
  resonsive-image()
  max-width: 60px
  fixed()
  top: $pad
  left: $pad*4
  z-index: 10
  padding: $pad*2
  color: $white
  dev-outline(blue)

// $center // general centering divider
.center
  fixed-translate-center()
  dev-outline(blue)

.center
  &.charge, &.sentence, &.effects
    .button
      float: right

// $title
body.title
  //
  .full-logo
    margin-bottom: $pad*2
  // header
  //   fixed()
  //   width: 100%
  //   top: 0
  //   border: 2px solid green

.thing
  border: 2px solid red
  padding: 3rem
  position: fixed
  top: left
  display: block
  z-index: 30
  color: yellow

.title-screen
  fixed-stretch()
  z-index: 10
  opacity: 1
  .box
    absolute()
    width: 50%
    height: 50%
  .one, .two
    color: $white
    .eye
      color: $white
  .three, .four
    color: $color
    .eye
      color: $color
  .one
    top: 0
    left: 0
    background: $color
  .two
    top: 0
    right: 0
    background: $highlight
  .three
    bottom: 0
    left: 0
    background: black
    a
      color: $white
  .four
    right: 0
    bottom: 0
    background: $white
  .full-logo
    absolute-translate-center()

.title-blocks
  .block
    absolute()
    width: 12%
    height: 10%
    background: $color
    top: 0
    transition: .6s
  .left
    transform: translate(-100%,0)
  .right
    transform: translate(100%,0)
  .one, .two, .three, .four, .five
    left: 0
    width: 7%
  .six, .seven, .eight, .nine, .ten
    right: 0
  .one, .six
    top: 0%
  .two, .seven
    top: 20%
  .three, .eight
    top: 40%
  .four, .nine
    top: 60%
  .five, .ten
    top: 80%

.title-blocks
  &.active
    .left, .right
      transform: translate(0,0)


// $page
.page
  width: 100%
  max-width: 66%
  text-align: center
  border: 2px solid blue
  reset-translate()
  top: 39%
  horizontal-absolute-translate-center()
  dev-outline(yellow)
  .full-logo
    display: inline-block
    margin-bottom: $pad*3
  header
    dev-outline(purple)
  h2
    margin: 0
    solid-type()
    margin-bottom: $pad*2
    font-size: 26px
    line-height: 1.3
  h4
    medium-type()
  .body
    text-align: left
    p
      margin-bottom: $pad*2
  p
    font-family: monospace
    line-height: 1.5
  footer
    margin-top: $pad*6
    dev-outline(blue)

// $stories
.lego-house
  relative()
  background: $white
  padding: $pad*4 $pad*5
  color: $black
  width: 640px
  display: inline-block
  min-height: 240px
  transform: translate(0, -($pad*4) )
  transition: .2s
  opacity: 0
  dev-outline(green)
  .chunk
    position: absolute
    width: 40px
    height: 40px
    background: $white
  .one
    top: 0
    right: 100%
  .two
    top: 80px
    right: 100%
  .three
    top: 160px
    right: 100%
  .four
    bottom: 160px
    left: 100%
  .five
    bottom: 80px
    left: 100%
  .six
    bottom: 0
    left: 100%
  .button
    border-color: $black
    color: $black
    &:focus
      border-color: $highlight
  &.active
    transform: translate(0,0)
    opacity: 1



