  width: 100%
  // border: 1px solid $color
  padding: 0
  .input-w
    .label
      color: $color
    input
      background: transparent
      border: 1px solid $color!important // $shame

.welcome-logo
  color: $blue
  svg
    // fill: currentColor
  .text
    path
      color: $color

.progress-bar
  display: none

.eye
  color: $color
  max-width: 70px
  margin-top: $pad*2
  // border: 2px solid red
  svg
    fill: currentColor
    display: block
    width: 100%
    height: 100%

.ember-view
  // border: 2px solid orange

.xxx
  //
  position: fixed
  display: flex
  align-items: center
  justify-content: center
  height: 100%
  // border: 3px solid purple
  @media $break-point-1
    .information
      .button
        display: none

  @media $break-point-2
    // background: $white
    width: 100%
    max-width: 800px
    absolute-translate-center()
    .information
      background: $white
      .button
        display: none

.crime-w
  @media $break-point-2
    background: $white
    padding: $pad*4

.document
  //
  header
    clear-floats()
  .table
    float: left
    border: $thick solid $black
    padding: 0
    margin: 0
    clear-floats()
    width: auto
    &:first-of-type
      border-bottom: $thick solid $black
      width: auto
      width: 100%
    &:nth-of-type(2)
      border-top: 0
  header
    //
    uppercase()
    .number
      min-width: 22px
      border-right: $thick solid $black
      border-bottom: $thick solid $black
      display: inline-block
      text-align: center
    .name
      display: inline-block
    .charge
      padding: $pad
      solid-type()
      line-height: 1
    .location, .priors, .actual, .your
      float: left
      padding: 0 $pad
      min-width: $pad*26
      > *
        // border: 1px solid red
      .heading
        display: inline-block
        small-type()
        height: 5px
        line-height: 5px
        // border: 1px solid red
      .content
        // height: 10px
        // line-height: 10px
        // margin-bottom: $pad
    .actual, .your
      .heading
        // border: 1px solid blue
      .content
        // border: 1px solid green
        noir-type()
        font-size: 40px
        line-height: 26px
    .location, .actual
      border-right: $thick solid $black
      
        
.fact-list
  li
    // border: 1px solid blue
    margin-top: $pad*3
  h3
    noir-type()
    font-size: 30px
  
.slider-button
  // border: 1px solid red
  padding: 0 $pad*5
  clear-floats()
  .button
    float: right


