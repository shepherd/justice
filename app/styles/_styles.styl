.crime-w
  width: 100%
  min-height: 100px
  // padding: $pad*3 $pad $pad
  font-family: monospace

.crime
  width: 100%
  float: left
  border: 2px solid $black
  .heading
    // border: 1px solid orange
    div
      display: inline-block
      uppercase()
    .number, .name
      //
    .number
      border-right: 2px solid $black
      border-bottom: 2px solid $black
      min-width: 30px
      text-align: center
      padding: $pad*.5 $pad
      solid-type()
    .name
      //
  .charge, .headline
    padding: $pad
    solid-type()
    font-size: 22px
    line-height: 1.1

.stats
  // border: 10px solid blue
  overflow: hidden // clear-fix
  width: 100%
  float: left
  .location, .priors, .actual, .your
    float: left
    border: 2px solid $black
    border-top: 0
    padding: $pad*.25 $pad $pad*.5
    min-width: 30%
    font-size: 15px
    text-transform: uppercase
    span
      display: block
      small-type()
      margin: $pad*.5 0 0
  .priors
    border-left: 0

.actual, .your
  //
  span
    font-size: 12px
  h2
    noir-type()
    margin: 0
    font-size: 50px
.actual
  h2
    color: $highlight
.overview, .story, .priors-story, .back-story
  width: 100%
  float: left
  font-family: monospace
  margin-top: $pad*2
  standard-type()
  p, li
    margin: 0
    font-family: monospace!important
    font-family: monospace
.story, .overview
  //
  
.back-story, .prompt
  // background: blue
  margin-bottom: $pad
.prompt
  width: 100%
  float: left
  color: $color
  margin-top: $pad*2

.button
  margin-top: $pad*2

.fact-list
  reset-list-styles()
  margin: $pad*2 0
  margin-bottom: $pad*2
  > li
    // border: $line solid black
    padding: $pad
    display: inline-block
    // margin-bottom: $pad*1.5
    &:nth-of-type(1)
      border-right: 0
      margin-right: 3%
    &:nth-of-type(1), &:nth-of-type(2)
      width: 48%
      float: left
    &:nth-of-type(3)
      width: 70%
    h3
      margin: 0
      noir-type()
      extra-large-type()
      margin-right: $pad*2   
      

