.prompt
  width: 100%
  float: left
  color: $color
  margin-top: $pad*2

.button
  margin-top: $pad*2

.fact-list
  reset-list-styles()
  margin: $pad*2 0
  margin-bottom: $pad*2
  display: flex
  align-content: flex-start
  flex-wrap: wrap
  > li
    border: $line solid black
    padding: $pad*2
    // margin-bottom: $pad*1.5
    padding-top: $pad
    &:nth-of-type(1)
      border-right: 0
      // margin-right: 3%
    &:nth-of-type(1), &:nth-of-type(2)
      width: 50%
      float: left
    &:nth-of-type(3)
      width: 70%
      border-top: 0
    h3
      margin: 0
      noir-type()
      extra-large-type()
      margin-right: $pad*2

