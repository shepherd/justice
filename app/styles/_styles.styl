.story-header 
  .inner-w
    display: flex
    flex-direction: row
    flex-grow: 1
    align-content: stretch
    align-items: center
    padding-bottom: 0
    > *
      // border: 1px solid lime
  .brand-mark
    max-width: 30px
  .something
