@keyframes frantic-noise-movement
  0%, 100%
    transform: translate(0,0)
  50%
    transform: translate(10%,0)

.noise-layer
  background-image: url(http://i.stack.imgur.com/PEnJm.png)
  position: absolute
  width: 300%
  height: 300%
  top: -100%
  left: -100%
  animation: frantic-noise-movement .2s infinite
  opacity: .2
  z-index: 0
  background-size: 300px

@keyframes record-pulse
  0%, 100%
    box-shadow: 0 0 2px 2px alpha($highlight, 40%)
  50%
    box-shadow: 0 0 3px 3px alpha($highlight, 60%)

.record-indicator 
