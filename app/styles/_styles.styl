
// $dev
dev-outline($color)
  border: 3px solid $color

body
  // background: $black
  transition: 0s

.container
  width: 100%
  padding: 0

.inner-w
  width: 100%
  max-width: 1100px
  margin: 0 auto
  clear-floats()
  padding: $pad*2

.wire-fframes
  background: $color-light
  //
  .container
    border: 2px solid $color
    padding: $pad
    margin-top: $pad
    .inner-w
      border: 1px solid $color
  &.landing
    section.container
      .inner-w
        min-height: 300px
        @media $break-point-1
          min-height: 400px
  .menu
    //
  .module
    width: 100%
    border: 1px solid $color
    .input-w
      .label
        color: $color
      input
        background: transparent
        border: 1px solid $color
  .ember-load-indicator
    .branding
      border: 1px solid $color
  .range-slider
    border: 1px solid $color
  .ember-load-indicator
    background: $color-light

a
  color: $highlight
  text-decoration: underline

p
  max-width: 900px
  &:not(first-of-type)
    margin-top: $pad*2

.module
  // background: $white
  padding: $pad
  float: left
  &:not(first-of-type)
    margin-top: $pad*2
  form
    input
      background: $white

.menu
  li
    display: inline-block
    a
      padding: $pad 0

.ember-load-indicator
  fixed-stretch()
  
  z-index: 50
  .branding
    absolute-translate-center()
    padding: $pad*2
    max-width: 100px

// .brand-icon
//   display: none

// .record-indicator
//   display: none


.social-list
  li
    display: inline-block
    a
      color: $color
     
.stats
  display: flex

.actual, .your
  display: block
  border: 1px solid $color
  padding: $pad

.actual
  margin-right: $pad*4
  
.next-button
  margin-bottom: $pad*6
  border: 1px solid $highlight
  padding: $pad*2 $pad*3
  min-width: 120px

.button
  border: 1px solid $highlight
  padding: $pad $pad*2
  margin-top: $pad
  display: inline-flex
  align-items: center
  // max-width: 200px
  flex-shrink: 1
  solid-type()
  uppercase()
  font-size: 16px
  letter-spacing: .06em
  .icon-x
    width: 16px
    height: 16px
    margin-right: $pad
  &:active
    background: $highlight
    color: $white
  
.page
  // background: $black
  // color: $white
  header
    text-align: center
  footer
    margin-top: $pad*6
    
.details
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  background: $white
  width: 100%
  height: 100%
  // border: 1px solid red
  z-index: 20000
  padding: $pad*2
  padding-bottom: $pad*8
  overflow: scroll
  -webkit-overflow-scrolling: touch
  display: none
  max-width: 800px
  max-height: 800px
  absolute-translate-center()

  p
    margin-bottom: $pad*2
  .button-w
    margin-top: $pad*4
  &.open
    display: block

body
  &.modal-open
    overflow: hidden
    position: fixed

.branding.eye
  max-width: 30px

.story-header .inner-w
  display: flex
  flex-direction: row
  flex-grow: 1
  align-content: stretch
  align-items: center
  > *
    // border: 1px solid lime
  .branding.eye
    // align-self: flex-start
  .something
    flex-grow: 1
    text-align: center
  .home-button
    // align-self: flex-end
      
body.title
  background: black
  color: $white
  .full-logo
    margin-top: $pad*4
  .button
    border-color: $color
    color: $color
    text-decoration: none
    &:active
      background: $color
      color: $white
  .eye-branding
    color: $color
    max-width: 30px
    svg
      display: block
      width: 100%
      height: 100%

.stories
  .brand-icon
    max-width: 36px
    svg
      display: block
      width: 100%
      height: 100%

.module
  width: 100%
  // border: 1px solid $color
  padding: 0
  .input-w
    .label
      color: $color
    input
      background: transparent
      border: 1px solid $color!important // $shame

.welcome-logo
  color: $blue
  svg
    // fill: currentColor
  .text
    path
      color: $color


.eye
  color: $color
  max-width: 40px
  svg
    fill: currentColor
    display: block
    width: 100%
    height: 100%
