.stats
  // border: 10px solid blue
  overflow: hidden // clear-fix
  width: 100%
  float: left
  .location, .priors, .actual, .your
    float: left
    border: 2px solid $black
    border-top: 0
    padding: $pad*.5 $pad*2 $pad*.5
    min-width: 25%
    font-size: 15px
    text-transform: uppercase
    span
      display: block
      small-type()
      margin: $pad*.5 0 0
  .priors, .your
    border-left: 0

$time = 5s

delay($delay)
  transition-delay: $delay

.story-headers, .timed
  opacity: 0
  transition: 1s
  transform: translate(0,-5px)
  &.one
    delay(.2s)
  &.two
    delay(.4s)
  &.three
    delay(.6s)
  &.four
    delay(.8s)
  &.five
    delay(1s)
  &.six
    delay(1.2s)
  &.seven
    delay(1.4s)
  &.active
    transform: translate(0,0)
    opacity: 1

.actual, .your
  //
  span
    font-size: 12px
  h2
    noir-type()
    margin: 0
    font-size: 50px
.actual
  h2
    color: $highlight
.overview, .story, .priors-story, .back-story
  width: 100%
  float: left
  font-family: monospace
  margin-top: $pad*2
  standard-type()
  p, li
    margin: 0
    font-family: monospace!important
    font-family: monospace
.story, .overview
  //

.back-story, .prompt
  // background: blue
