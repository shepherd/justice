delay($delay)
  transition-delay: $delay

.story-headers, .timed
  opacity: 0
  transition: .5s
  transform: translate(0,-3px)
  &.one
    delay(.2s)
  &.two
    delay(.5s)
  &.three
    delay(.8s)
  &.four
    delay(1.1s)
  &.five
    delay(1.4s)
  &.six
    delay(1.7s)
  &.seven
    delay(2s)
  &.active
    transform: translate(0,0)
    opacity: 1

